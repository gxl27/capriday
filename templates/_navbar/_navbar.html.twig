                    {% if twig_pa.checkPa %}
                    
                    <li class='dropdown'><a title='Capriday projects' title='Proiecte'>Projects</a>
                        <ul class='submenu'>
                        {% for project in twig_pa.pa %}
                            <li> <a data-route= "{{ path('hproject') }}" data-scroll="#s-{{ loop.index }} "> {{ project.name }}</a></li>
                        {% endfor %}
                        </ul>
                    </li>
                    {% else %}
                     <li><a href="{{ path('hproject') }}" title='Capriday projects' title='Projects'>Projects</a> </li>
