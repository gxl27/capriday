{% extends 'container.html.twig' %}

{% block title %}Stiri si noutati{% endblock %}

{% block container %}
    <h1>Stiri si nouatati</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ news.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ news.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ news.description }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ news.link }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ news.type }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ news.createdAt ? news.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CreatedBy</th>
                <td>{{ news.createdBy }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ news.status }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ news.position }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('news_index') }}">back to list</a>

    <a href="{{ path('news_edit', {'id': news.id}) }}">edit</a>

    {{ include('admin/news/_delete_form.html.twig') }}
{% endblock %}
