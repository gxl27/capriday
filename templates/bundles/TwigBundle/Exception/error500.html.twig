{# templates/bundles/TwigBundle/Exception/error404.html.twig #}
{% extends 'container.html.twig' %}
{% block title %}Server error{% endblock %}
{% block container %}
    <h1>Server error (code error 500)</h1>

    <p>
    {% if app.user.roles.0 == "ROLE_SUPERADMIN" or app.user.roles.0 == "ROLE_ADMIN" %}
        <a href="{{ path('admin') }}"> back to panel</a>.
    {% else %}
       <a href="{{ path('home') }}"> back to site</a>.
    {% endif %}
    </p>
{% endblock %}