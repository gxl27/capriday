{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block stylesheets %}
{# get the parent stylesheet block #}
{{ parent() }}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.6.0/dist/leaflet.css"
    integrity="sha512-xwE/Az9zrjBIphAcBb3F6JVqxf46+CDLwfLMHloNu6KEQCAWi6HcDUbeOfBIptF7tcCzusKFjFw2yuvEpDL9wQ=="
    crossorigin=""/>
{% endblock %}

{% block body %}
<section style='padding-top:0 !important; padding-bottom:0 !important;'>
    <div id='map'></div>
</section>

<section class='container'>
<h1>Contact us!</h1>
    <div class="contact-content">
        <div class='contact-details'>
            <h5>Capriday</h5>
            <div>
                <span><img src="/img/location-gray.svg" alt='location'>Bucharest, str. I.C. Bratianu nr. 48</span>
            </div>
            <div>
                <span><img src="/img/phone-gray.svg" alt='phone'>Mobil: <a href='tel:0739869984'>0739869984</a></span>
            </div>
            <div>
                <span><img src="/img/fax-gray.svg" alt='fax'>Tel./Fax.: <a href='tel:0739869984'>0739869984</a></span>
            </div>
            <div>
                <span><img src="/img/email-gray.svg" alt='email'><a href='mailto:capriday@gmail.com'>Email:capriday@gmail.com </a></span>
            </div>
        </div>
        <div class='contact-form'>
            <h5> Send a message</h5>
              {{ form_start(formContactmsg) }}
            <div class='w-100'>
                {{ form_row(formContactmsg.name) }}
            </div>
         
            <div class='f-col'>
                {{ form_row(formContactmsg.telephone) }}
                {{ form_row(formContactmsg.email) }}
            </div>
            <div class='w-100'>
                {{ form_row(formContactmsg.title) }}
            </div>
       
            {{ form_row(formContactmsg.subject) }}
            <button class='btn-primary' style='color:white'>Send</button>
           
            {# {{ form_widget(formContactmsg) }} #}
            {{ form_end(formContactmsg) }}
        </div>
    </div>
</section>

{% endblock %}
{% block mainjavascript %}
<script src="https://unpkg.com/leaflet@1.6.0/dist/leaflet.js"
    integrity="sha512-gZwIG9x3wUXg2hdXF6+rVkLF/0Vi9U8D2Ntg4Ga5I5BZpVkVxlJWbSQtXPSiUTtC0TjtGOmxa1AJPuV0CPthew=="
    crossorigin=""></script>  
<script src="/unlinkedJs/map.js">
{# get the parent mainjavascript block #}
{{ parent() }}
{% endblock %}
