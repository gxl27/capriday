{% extends 'container.html.twig' %}

{% block title %}Albume{% endblock %}

{% block container %}
    <h1>Album</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gallery.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ gallery.name }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ gallery.CreatedAt ? gallery.CreatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ gallery.description }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ gallery.position }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('gallery_index') }}">back to list</a>

    <a href="{{ path('gallery_edit', {'id': gallery.id}) }}">edit</a>

    {{ include('admin/gallery/_delete_form.html.twig') }}
{% endblock %}
